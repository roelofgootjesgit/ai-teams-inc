from fastapi import FastAPI, HTTPException
from fastapi.staticfiles import StaticFiles
from fastapi.responses import FileResponse
from pydantic import BaseModel
import os
from dotenv import load_dotenv

# Load environment variables
load_dotenv()

# Import AI Team
from ai_team import create_team

app = FastAPI()

# Serve static files
app.mount("/static", StaticFiles(directory="static"), name="static")

@app.get("/")
async def read_root():
    """Serve the main HTML page"""
    return FileResponse("static/index.html")

@app.get("/health")
async def health():
    """Health check endpoint"""
    return {"status": "healthy", "agents": ["Project Manager", "AI Architect", "Domain Expert"]}

# Request model
class ChatRequest(BaseModel):
    message: str

# Initialize AI team (singleton)
print("Initializing AI Team...")
team = create_team()
print("âœ… AI Team ready: Project Manager, AI Architect, Domain Expert")

@app.post("/chat")
async def chat(request: ChatRequest):
    """
    Chat endpoint - processes user question through multi-agent team
    Returns formatted response from all agents
    """
    try:
        # Validate input
        if not request.message or not request.message.strip():
            raise HTTPException(status_code=400, detail="Message cannot be empty")
        
        print(f"\nğŸ“¨ Received question: {request.message[:50]}...")
        
        # Process through multi-agent team
        result = team.run(request.message)
        
        print(f"âœ… Generated {result.count('ğŸ¯') + result.count('ğŸ—ï¸') + result.count('ğŸ’¼')} agent responses")
        
        return {"response": result}
        
    except Exception as e:
        print(f"âŒ Error: {str(e)}")
        raise HTTPException(status_code=500, detail=f"AI Team error: {str(e)}")

if __name__ == "__main__":
    import uvicorn
    
    # Check environment
    if not os.getenv("ANTHROPIC_API_KEY"):
        print("âŒ ERROR: ANTHROPIC_API_KEY not found in .env file")
        print("Please create a .env file with: ANTHROPIC_API_KEY=your_key_here")
        exit(1)
    
    print("\n" + "="*60)
    print("ğŸš€ GTS AI TEAMS - Multi-Agent System")
    print("="*60)
    print("\nStarting server...")
    print("Open: http://localhost:8000")
    print("\nPress CTRL+C to stop")
    print("="*60 + "\n")
    
    uvicorn.run(app, host="0.0.0.0", port=8000)